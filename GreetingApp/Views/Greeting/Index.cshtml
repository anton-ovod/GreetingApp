@{
    ViewData["Title"] = "Main Page";
}
@model UserNameModel

<form asp-aspasp-controller="Greeting" asp-action="Greet">
    <h1>Hello!</h1>
    <div class="row">
        <div class="col-40">
            <label asp-for="UserName"></label>
        </div>
        <div class="col-60">
            <input asp-for="UserName" />
        </div>
    </div>
    <span asp-validation-for="UserName"></span>
    <input type="submit" value="Greet Me!" />
</form>